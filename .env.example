# Environment Variables Template
# Copy this file to .env and customize values

# Application Configuration
APP_NAME="N8N PDF Tools API"
APP_VERSION="1.0.0"
APP_HOST="0.0.0.0"
APP_PORT=8000
DEBUG=true

# File Upload Limits
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=application/pdf

# Temporary File Storage
TEMP_DIR="/tmp/n8n-tools"
CLEANUP_AFTER_HOURS=1

# Security
SECRET_KEY="your-secret-key-here"
CORS_ORIGINS="*"

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Health Check
HEALTH_CHECK_TIMEOUT=30

# AI PDF Operations Configuration
# Set AI_PDF_MISTRAL_API_KEY to enable AI features
AI_PDF_MISTRAL_API_KEY="your-mistral-api-key-here"
AI_PDF_MISTRAL_MODEL="mistral-medium"
AI_PDF_MISTRAL_MAX_TOKENS=1000
AI_PDF_MISTRAL_TEMPERATURE=0.7

# OCR Configuration
AI_PDF_OCR_ENABLED=true
AI_PDF_OCR_MODEL="tesseract"
AI_PDF_OCR_LANGUAGES="eng"

# Vision Analysis Configuration
AI_PDF_VISION_ENABLED=true
AI_PDF_VISION_MODEL="yolov5"
AI_PDF_VISION_CONFIDENCE_THRESHOLD=0.5

# Embeddings Configuration
AI_PDF_EMBEDDINGS_ENABLED=true
AI_PDF_EMBEDDINGS_MODEL="sentence-transformers/all-MiniLM-L6-v2"
AI_PDF_EMBEDDINGS_CHUNK_SIZE=512
AI_PDF_EMBEDDINGS_OVERLAP=50

# General AI Settings
AI_PDF_MAX_PAGES_PER_REQUEST=50
AI_PDF_TIMEOUT_SECONDS=300
AI_PDF_CACHE_ENABLED=true
AI_PDF_CACHE_TTL_SECONDS=3600
